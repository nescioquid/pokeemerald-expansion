script LilycoveCity_DepartmentStore_4F_EventScript_ClerkLeft_Pory {
  lock
  faceplayer
  call(Common_PoryScript_Clerk_Hello)
  waitmessage
  pokemart(Pokemart_AttackTMs)
  checkitem(ITEM_TM_FIRE_BLAST) // TM38
  if (var(VAR_RESULT)) {
    checkitem(ITEM_TM_THUNDER) // TM25
    if (var(VAR_RESULT)) {
      checkitem(ITEM_TM_BLIZZARD) // TM14
      if (var(VAR_RESULT)) {
      checkitem(ITEM_TM_HYPER_BEAM) // TM15
        if (var(VAR_RESULT)) {
          msgbox(format("Dang, you bought them all? Nice!"))
        }
      }
    }
  }
  call(Common_PoryScript_Clerk_Goodbye)
  release
  end
}

mart Pokemart_AttackTMs {
  ITEM_TM_FIRE_BLAST  // TM38
  ITEM_TM_THUNDER     // TM25
  ITEM_TM_BLIZZARD    // TM14
  ITEM_TM_HYPER_BEAM  // TM15
}

