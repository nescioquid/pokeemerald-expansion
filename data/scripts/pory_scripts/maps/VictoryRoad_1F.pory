movement _VictoryRoad_1F_Movement_WallyApproachPlayerLeft {
  walk_up * 6
  face_left
}

movement _VictoryRoad_1F_Movement_WallyApproachPlayerCenter {
  walk_up * 6
}

movement _VictoryRoad_1F_Movement_WallyApproachPlayerRight {
