script LilycoveCity_DepartmentStore_2F_EventScript_ClerkLeft_Pory {
  lock
  faceplayer
  random(2)
  if (var(VAR_RESULT) == 0) {
    switch (var(VAR_RESULT)) {
      case 0: message(format("We got some awesome new snacks in! The crunchies are my favorite!"))
    }
  } else {
    call(Common_PoryScript_Clerk_Hello)
  }
  waitmessage
  call(Common_PoryScript_GetBadgeCount)
  switch(var(VAR_RESULT)) {
    case 0: pokemart(Pokemart_Items_Some)
    case 1: pokemart(Pokemart_Items_Some)
    case 2: pokemart(Pokemart_Items_Some)
    case 3: pokemart(Pokemart_Items_Some)
    case 4: pokemart(Pokemart_Items_Some)
    case 5: pokemart(Pokemart_Items_Some)
    case 6: pokemart(Pokemart_Items_Most)
    case 7: pokemart(Pokemart_Items_Most)
    case 8: pokemart(Pokemart_Items_All)
  }
  if (var(VAR_RESULT) == 0) {
    msgbox(format("{FONT_SHORT}…munch… …munch…"))
  } else {
    call(Common_PoryScript_Clerk_Goodbye)
  }
  release
  end
}

