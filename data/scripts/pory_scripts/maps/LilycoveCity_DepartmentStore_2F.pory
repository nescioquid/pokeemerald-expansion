script LilycoveCity_DepartmentStore_2F_EventScript_ClerkRight_Pory {
  lock
  faceplayer
  random(3)
  if (var(VAR_RESULT) == 0) {
    switch (var(VAR_RESULT)) {
      case 0: message(format("Sure, I'll let you touch my balls… But only if you ask nicely! Haha!"))
    }
  } else {
    call(Common_PoryScript_Clerk_Hello)
  }
  waitmessage
  call(Common_PoryScript_GetBadgeCount)
  switch(var(VAR_RESULT)) {
    case 0: pokemart(Pokemart_PokeBalls_Some)
    case 1: pokemart(Pokemart_PokeBalls_Some)
    case 2: pokemart(Pokemart_PokeBalls_Some)
    case 3: pokemart(Pokemart_PokeBalls_Some)
    case 4: pokemart(Pokemart_PokeBalls_Some)
    case 5: pokemart(Pokemart_PokeBalls_Some)
    case 6: pokemart(Pokemart_PokeBalls_All)
    case 7: pokemart(Pokemart_PokeBalls_All)
    case 8: pokemart(Pokemart_PokeBalls_All)
  }
  if (var(VAR_RESULT) == 0) {
    msgbox(format("Seriously though, you're not gonna tell my boss I said that, are you?"))
  } else {
    call(Common_PoryScript_Clerk_Goodbye)
  }
  release
  end
}

