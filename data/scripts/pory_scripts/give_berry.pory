script _Common_EventScript_GiveBerry_Generic {
  random(7)
  switch (var(VAR_RESULT)) {
    case 0: giveitem(ITEM_LEPPA_BERRY, 3)
    case 1: giveitem(ITEM_LUM_BERRY,   3)
    case 2: call(_Common_EventScript_GiveBerry_Status)
    case 3: call(_Common_EventScript_GiveBerry_HP)
    case 4: call(_Common_EventScript_GiveBerry_Resistance)
    case 5: call(_Common_EventScript_GiveBerry_RaiseStats)
    case 6: call(_Common_EventScript_GiveBerry_Retaliatory)
  }
  goto_if_eq(VAR_RESULT, FALSE, Common_EventScript_ShowBagIsFull)
}

